<h1 style="margin-bottom: 30px">Recently added events</h1>

<% @events.each do |event| %>
  <ul>
    <li><%= link_to event.name, event %>
        (<%= link_to 'edit', edit_event_path(event) %> or
        <%= link_to 'delete', event, :confirm => 'Are you sure?', :method => :delete %>)</li>
  </ul>
<% end %>

<br />

